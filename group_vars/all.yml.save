---
# Set to 'pi' for Raspberry Pi OS, or 'pirate' for HypriotOS.
ansible_user: pirate

# Set to 'arm64' for a 64-bit OS, or 'arm' for 32-bit.
helm_arch: arm
chart_version

# Turing Pi.
ingress_server_ip: 192.168.1.202
load_balancer_server_ip: 192.168.1.202
# https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
timezone: "America/Los_Angeles"

# NFS
nfs_server_ip: 192.168.1.192
homebridge_nfs_path: "/home/pi/nas/homebridge"
transmission_nfs_path: "/home/pi/nas"



